<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>Simple Image Gallery (by JoomlaWorks)</name>
    <author>JoomlaWorks</author>
    <authorEmail>please-use-the-contact-form@joomlaworks.net</authorEmail>
    <authorUrl>https://www.joomlaworks.net</authorUrl>
    <copyright>Copyright (c) 2006 - 2020 JoomlaWorks Ltd. All rights reserved.</copyright>
    <creationDate>January 14th, 2020</creationDate>
    <license>https://www.gnu.org/licenses/gpl.html GNU/GPL</license>
    <version>4.1.0</version>
    <description>JW_PLG_SIG_XML_DESC</description>
    <!-- Parameters -->
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="galleries_rootfolder" type="text" default="images" label="JW_PLG_SIG_ROOTFOLDER" description="JW_PLG_SIG_ROOTFOLDER_DESC" />
                <field name="thb_width" type="text" default="360" size="3" label="JW_PLG_SIG_TW" description="JW_PLG_SIG_TW_DESC" />
                <field name="thb_height" type="text" default="240" size="3" label="JW_PLG_SIG_TH" description="JW_PLG_SIG_TH_DESC" />
                <field name="jpg_quality" type="text" default="90" size="3" label="JW_PLG_SIG_TQ" description="JW_PLG_SIG_TQ_DESC" />
                <field name="cache_expire_time" type="text" default="86400" size="3" label="JW_PLG_SIG_TCEXP" description="JW_PLG_SIG_TCEXP_DESC" />
                <field name="memoryLimit" type="text" default="" size="3" label="JW_PLG_SIG_ML" description="JW_PLG_SIG_ML_DESC" />
                <field name="fancybox_language" type="list" default="en" label="JW_PLG_SIG_FB_LANG" description="JW_PLG_SIG_FB_LANG_DESC">
                    <option value="en">JW_PLG_SIG_FB_LANG_OPT_EN</option>
                    <option value="de">JW_PLG_SIG_FB_LANG_OPT_DE</option>
                    <option value="xx">JW_PLG_SIG_FB_LANG_OPT_XX</option>
                </field>
                <field name="fancybox_close" type="text" default="" hint="JW_PLG_SIG_FB_CLOSE" label="JW_PLG_SIG_FB_LANG_CLOSE" description="JW_PLG_SIG_FB_LANG_CLOSE_DESC" />
                <field name="fancybox_next" type="text" default="" hint="JW_PLG_SIG_FB_NEXT" label="JW_PLG_SIG_FB_LANG_NEXT" description="JW_PLG_SIG_FB_LANG_NEXT_DESC" />
                <field name="fancybox_prev" type="text" default="" hint="JW_PLG_SIG_FB_PREVIOUS" label="JW_PLG_SIG_FB_LANG_PREV" description="JW_PLG_SIG_FB_LANG_PREV_DESC" />
                <field name="fancybox_error" type="text" default="" hint="JW_PLG_SIG_FB_REQUEST_CANNOT_BE_LOADED" label="JW_PLG_SIG_FB_LANG_ERROR" description="JW_PLG_SIG_FB_LANG_ERROR_DESC" />
                <field name="fancybox_play_start" type="text" default="" hint="JW_PLG_SIG_FB_START_SLIDESHOW" label="JW_PLG_SIG_FB_LANG_PLAY_START" description="JW_PLG_SIG_FB_LANG_PLAY_START_DESC" />
                <field name="fancybox_play_stop" type="text" default="" hint="JW_PLG_SIG_FB_PAUSE_SLIDESHOW" label="JW_PLG_SIG_FB_LANG_PLAY_STOP" description="JW_PLG_SIG_FB_LANG_PLAY_STOP_DESC" />
                <field name="fancybox_full_screen" type="text" default="" hint="JW_PLG_SIG_FB_FULL_SCREEN" label="JW_PLG_SIG_FB_LANG_FULL_SCREEN" description="JW_PLG_SIG_FB_LANG_FULL_SCREEN_DESC" />
                <field name="fancybox_thumbs" type="text" default="" hint="JW_PLG_SIG_FB_THUMBS" label="JW_PLG_SIG_FB_LANG_THUMBS" description="JW_PLG_SIG_FB_LANG_THUMBS_DESC" />
                <field name="fancybox_download" type="text" default="" hint="JW_PLG_SIG_FB_DOWNLOAD" label="JW_PLG_SIG_FB_LANG_DOWNLOAD" description="JW_PLG_SIG_FB_LANG_DOWNLOAD_DESC" />
                <field name="fancybox_share" type="text" default="" hint="JW_PLG_SIG_FB_SHARE" label="JW_PLG_SIG_FB_LANG_SHARE" description="JW_PLG_SIG_FB_LANG_SHARE_DESC" />
                <field name="fancybox_zoom" type="text" default="" hint="JW_PLG_SIG_FB_ZOOM" label="JW_PLG_SIG_FB_LANG_ZOOM" description="JW_PLG_SIG_FB_LANG_ZOOM_DESC" />
            </fieldset>
        </fields>
    </config>
    <!-- Files -->
    <files folder="plugin" destination="jw_sig">
        <filename plugin="jw_sig">jw_sig.php</filename>
        <filename plugin="jw_sig">jw_sig.xml</filename>
        <folder>jw_sig</folder>
    </files>
    <languages folder="plugin">
        <language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sig.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sig.sys.ini</language>
    </languages>
    <updateservers>
        <server type="extension" priority="1" name="Simple Image Gallery">https://cdn.joomlaworks.org/updates/sig.xml</server>
    </updateservers>
</extension>

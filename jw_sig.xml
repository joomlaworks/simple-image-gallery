<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
    <name>Simple Image Gallery (by JoomlaWorks)</name>
    <author>JoomlaWorks</author>
    <authorEmail>please-use-the-contact-form@joomlaworks.net</authorEmail>
    <authorUrl>https://www.joomlaworks.net</authorUrl>
    <copyright>Copyright (c) 2006 - 2020 JoomlaWorks Ltd. All rights reserved.</copyright>
    <creationDate>January 14th, 2020</creationDate>
    <license>https://www.gnu.org/licenses/gpl.html GNU/GPL</license>
    <version>4.1.0</version>
    <description>JW_PLG_SIG_XML_DESC</description>
    <!-- Parameters -->
    <params>
        <param name="galleries_rootfolder" type="text" default="images/stories" label="JW_PLG_SIG_ROOTFOLDER" description="JW_PLG_SIG_ROOTFOLDER_DESC" />
        <param name="jQueryHandling" type="list" default="1.12.4" label="JW_PLG_SIG_JQUERY_HANDLING" description="JW_PLG_SIG_JQUERY_HANDLING_DESC">
            <option value="0">JW_PLG_SIG_DO_NOT_LOAD_THE_JQUERY_LIBRARY</option>
            <option value="1.8.3">JW_PLG_SIG_LOAD_V1_8_X_LATEST_COPY</option>
            <option value="1.9.1">JW_PLG_SIG_LOAD_V1_9_X_LATEST_COPY</option>
            <option value="1.10.2">JW_PLG_SIG_LOAD_V1_10_X_LATEST_COPY</option>
            <option value="1.11.3">JW_PLG_SIG_LOAD_V1_11_X_LATEST_COPY</option>
            <option value="1.12.4">JW_PLG_SIG_LOAD_V1_12_X_LATEST_COPY</option>
        </param>
        <param name="thb_width" type="text" default="360" size="6" label="JW_PLG_SIG_TW" description="JW_PLG_SIG_TW_DESC" />
        <param name="thb_height" type="text" default="240" size="6" label="JW_PLG_SIG_TH" description="JW_PLG_SIG_TH_DESC" />
        <param name="jpg_quality" type="text" default="90" size="6" label="JW_PLG_SIG_TQ" description="JW_PLG_SIG_TQ_DESC" />
        <param name="cache_expire_time" type="text" default="86400" size="6" label="JW_PLG_SIG_TCEXP" description="JW_PLG_SIG_TCEXP_DESC" />
        <param name="memoryLimit" type="text" default="" size="6" label="JW_PLG_SIG_ML" description="JW_PLG_SIG_ML_DESC" />
        <param name="fancybox_language" type="list" default="en" label="JW_PLG_SIG_FB_LANG" description="JW_PLG_SIG_FB_LANG_DESC">
            <option value="en">JW_PLG_SIG_FB_LANG_OPT_EN</option>
            <option value="de">JW_PLG_SIG_FB_LANG_OPT_DE</option>
            <option value="xx">JW_PLG_SIG_FB_LANG_OPT_XX</option>
        </param>
        <param name="fancybox_close" type="text" default="" hint="JW_PLG_SIG_FB_CLOSE" label="JW_PLG_SIG_FB_LANG_CLOSE" description="JW_PLG_SIG_FB_LANG_CLOSE_DESC" />
        <param name="fancybox_next" type="text" default="" hint="JW_PLG_SIG_FB_NEXT" label="JW_PLG_SIG_FB_LANG_NEXT" description="JW_PLG_SIG_FB_LANG_NEXT_DESC" />
        <param name="fancybox_prev" type="text" default="" hint="JW_PLG_SIG_FB_PREVIOUS" label="JW_PLG_SIG_FB_LANG_PREV" description="JW_PLG_SIG_FB_LANG_PREV_DESC" />
        <param name="fancybox_error" type="text" default="" hint="JW_PLG_SIG_FB_REQUEST_CANNOT_BE_LOADED" label="JW_PLG_SIG_FB_LANG_ERROR" description="JW_PLG_SIG_FB_LANG_ERROR_DESC" />
        <param name="fancybox_play_start" type="text" default="" hint="JW_PLG_SIG_FB_START_SLIDESHOW" label="JW_PLG_SIG_FB_LANG_PLAY_START" description="JW_PLG_SIG_FB_LANG_PLAY_START_DESC" />
        <param name="fancybox_play_stop" type="text" default="" hint="JW_PLG_SIG_FB_PAUSE_SLIDESHOW" label="JW_PLG_SIG_FB_LANG_PLAY_STOP" description="JW_PLG_SIG_FB_LANG_PLAY_STOP_DESC" />
        <param name="fancybox_full_screen" type="text" default="" hint="JW_PLG_SIG_FB_FULL_SCREEN" label="JW_PLG_SIG_FB_LANG_FULL_SCREEN" description="JW_PLG_SIG_FB_LANG_FULL_SCREEN_DESC" />
        <param name="fancybox_thumbs" type="text" default="" hint="JW_PLG_SIG_FB_THUMBS" label="JW_PLG_SIG_FB_LANG_THUMBS" description="JW_PLG_SIG_FB_LANG_THUMBS_DESC" />
        <param name="fancybox_download" type="text" default="" hint="JW_PLG_SIG_FB_DOWNLOAD" label="JW_PLG_SIG_FB_LANG_DOWNLOAD" description="JW_PLG_SIG_FB_LANG_DOWNLOAD_DESC" />
        <param name="fancybox_share" type="text" default="" hint="JW_PLG_SIG_FB_SHARE" label="JW_PLG_SIG_FB_LANG_SHARE" description="JW_PLG_SIG_FB_LANG_SHARE_DESC" />
        <param name="fancybox_zoom" type="text" default="" hint="JW_PLG_SIG_FB_ZOOM" label="JW_PLG_SIG_FB_LANG_ZOOM" description="JW_PLG_SIG_FB_LANG_ZOOM_DESC" />
    </params>
    <!-- Files -->
    <files folder="plugin" destination="jw_sig">
        <filename plugin="jw_sig">jw_sig.php</filename>
        <folder>jw_sig</folder>
    </files>
    <languages folder="plugin">
        <language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sig.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sig.sys.ini</language>
    </languages>
</install>
